<select id="getDepartureInfo">
	SELECT
	  CITY_IDX,
	  COUNTRY_IDX,
	  NAME,
	  ENAME
	FROM
	  CITY_TB
	WHERE
	  NAME = #{ depCity }
</select>

<select id="getArrivalInfo">
	SELECT
	  CITY_IDX,
	  COUNTRY_IDX,
	  NAME,
	  ENAME
	FROM
	  CITY_TB
	WHERE
	  NAME = #{ ariCity }
</select>

