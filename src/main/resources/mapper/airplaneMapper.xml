<select id="getPriceInfo">
	SELECT
	  PRICE
	FROM
	  AIRPLANE_PRICE_TB
	WHERE
	  AIRPLANE_TIME_IDX = #{arg0}
	AND
	  PTYPE_IDX = #{arg1}
	AND
	  STYPE_IDX = #{arg2}
</select>


</mapper>